{% extends 'base.html.twig' %}

{% block title %}Мой аккаунт{% endblock %}

{% block header %}
    <li><a href="/" class="nav-link px-2">Главная</a></li>
    <li><a href="/users" class="nav-link px-2">Cписок пользователей</a></li>
    <li><a href="/user_info" class="nav-link px-2 link-secondary">Мой аккаунт</a></li>
{% endblock %}

{% block body %}
    {% if not user %}
        <div class="not-authorized">
            Вы не авторизованы, пожалуйста, авторизуйтесь, либо зарегистрируйтесь.
        </div>
    {% else %}
        <div class="user-profile text-center">
            <h2>Профиль пользователя</h2>
            <div class="profile-info">
                <div class="form-group">
                    <label for="username">Имя пользователя:</label>
                    <input type="text" id="username" class="form-control" value="{{ user.username }}" readonly>
                </div>
                <div class="form-group">
                    <label for="name">Имя:</label>
                    <input type="text" id="name" class="form-control" value="{{ user.name }}" readonly>
                </div>
                <div class="form-group">
                    <label for="surname">Фамилия:</label>
                    <input type="text" id="surname" class="form-control" value="{{ user.surname }}" readonly>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
