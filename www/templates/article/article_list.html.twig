{% extends 'base.html.twig' %}

{% block title %}Список постов в блоге!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table { border: 1px solid black; border-collapse: collapse; }
        table td { border: 1px solid black; padding: 4px 8px; }
    </style>

    <div class="example-wrapper">
        <h1>Лист с Блогами!</h1>
        <table>
            <tr>
                <td>Уникальный ключ</td>
                <td>Ссылка на автора</td>
                <td>Текст блога</td>
                <td>Дата создания комментария</td>
            </tr>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.author.username }}</td>
                    <td>{{ article.text }}</td>
                    <td>{{ article.createdAt.format("d.m.Y H:i") }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}