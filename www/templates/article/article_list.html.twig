{% extends 'base.html.twig' %}

{% block title %}Список постов в блоге!{% endblock %}

{% block header %}
    <li><a href="/article" class="nav-link px-2 link-secondary">Главная</a></li>
    <li><a href="/user" class="nav-link px-2">Пользователи</a></li>
    <li><a href="#" class="nav-link px-2">Мой профиль</a></li>
    <li><a href="/product" class="nav-link px-2">test_page</a></li>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table { border: 1px solid black; border-collapse: collapse; }
        table td { border: 1px solid black; padding: 4px 8px; }
    </style>

    <!-- Button for creating new blog -->
    <div class="d-flex justify-content-center align-items-center">
        {% if user %}
        <button type="button" class="btn btn-outline-primary btn-lg w-25" id="addArticleButton" data-bs-toggle="modal" data-bs-target="#addArticleModal">Создать свой блог</button>
        {% endif %}
    </div>

    <!-- Modal creating new blog -->
    <div class="modal fade" id="addArticleModal" tabindex="-1" aria-labelledby="addArticleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addArticleModalLabel">Войти в аккаунт</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="articleAuthoridInput" class="form-label">User_id</label>
                        <input type="text" class="form-control" id="articleAuthoridInput">
                    </div>
                    <div class="mb-3">
                        <label for="articleTextInput" class="form-label">Текст блога:</label>
                        <input type="text" class="form-control" id="articleTextInput">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary" id="addArticleSendButton">Опубликовать</button>
                </div>
            </div>
        </div>
    </div>

    <div class="example-wrapper">
        {% for article in articles %}
            <article class="post vt-post">
                <div class="row border border-light my-3">
                    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
                        <ul class="list-inline">
                            <h4>Опубликовано:</h4>
                            <i>{{ article.createdAt.format("d.m.Y H:i") }}</i>
                            <a class="btn btn-outline-secondary mt-2" href="#" role="button">Комментировать</a>
                        </ul>
                    </div>
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                        <div class="caption">
                            <h5 class="md-heading"><strong>{{ article.author.username }}</strong></h5>
                            <h4> {{ article.text }}</h4>
                        </div>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>

{% endblock %}