{% extends 'base.html.twig' %}

{% block title %}Список комментариев к посту Х!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table { border: 1px solid black; border-collapse: collapse; }
        table td { border: 1px solid black; padding: 4px 8px; }
    </style>

    <div class="example-wrapper">
        <h1>Лист с комментариями!"</h1>
        <table>
            <tr>
                <td>Уникальный ключ</td>
                <td>Ссылка на автора</td>
                <td>Ссылка на блог</td>
                <td>Текст комментария</td>
                <td>Дата создания комментария</td>
            </tr>
            {% for comment in comments %}
                <td>{{ comment.id }}</td>
                <td>{{ comment.author_id }}</td>
                <td>{{ comment.article_id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.created_at }}</td>
            {% endfor %}
        </table>
    </div>
{% endblock %}